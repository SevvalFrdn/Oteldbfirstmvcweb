@model Oteldbfirstmvcweb.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageLogin.cshtml";
}



@{
    try
    {
        if (TempData["msg"] != null)
        {
            <script>swal("Nabi Otel", "Kullanıcı adı veya Şifre Hatalı!!", "error");</script>
        }
    }
    catch
    {

    }
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>


                    <div class="card-body">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Username", @type = "text", @id = "inputUsername" } })
                            <label for="inputUsername">Username</label>
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-floating mb-3">
                            @Html.EditorFor(model => model.Password1, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Password", @type = "password", @id = "inputPassword" } })
                            <label for="inputPassword">Password</label>
                            @Html.ValidationMessageFor(model => model.Password1, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="form-check mb-3">
                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                            </div>*@
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                            @*<a class="small" href="password.html">Forgot Password?</a>*@
                            <input type="submit" value="Login" class="btn btn-primary" />

                        </div>

                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="@Url.Action("Yeni","Register")">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>




}

<div>
    @Html.ActionLink("Back to Home", "Index","Home")
</div>





